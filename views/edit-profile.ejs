<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>MyApp</title>
    <link rel="stylesheet" href="/style.css" type="text/css" />
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css"
      integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
  </head>
  <body>
    <%- include('header') %>

    <div class="background-my d-flex justify-content-center align-items-center">
      <div class="container container-narrow">
        <div class="row justify-content-center">
          <div class="col-lg-6 col-md-8 col-sm-10 mb-4">
            <a class="btn btn-outline-secondary mb-2 shadow mt-2" href=""
              >&laquo;Back To</a
            >
            <div class="form-container mt-2">
              <% errors.forEach(function(msg){ %>
              <div class="alert alert-danger text-center"><%= msg %></div>
              <% }) %> <% success.forEach(function(msg){ %>
              <div class="alert alert-success text-center"><%= msg %></div>
              <% }) %>

              <form action="" method="POST" class="d-flex flex-column">
                <label for="title" class="fw-bold text-center">Title:</label>
                <input
                  type="text"
                  id="title"
                  name="title"
                  value="<%= user.username %>"
                  class="form-control mb-3 mt-1 shadow-sm"
                  placeholder="Enter post title"
                  required
                />

                <label for="content" class="fw-bold text-center"
                  >Content:</label
                >
                <textarea
                  id="content"
                  name="content"
                  class="form-control mb-3 mt-1 shadow-sm"
                  rows="13"
                  placeholder="Enter post content"
                  required
                >
<%= user.email %></textarea
                >

                <button
                  class="btn btn-success fw-bold shadow-sm mt-3"
                  type="submit"
                >
                  Save Updates
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include('footer') %>
    <script
      src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
      integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.14.7/dist/umd/popper.min.js"
      integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.min.js"
      integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
      crossorigin="anonymous"
    ></script>
    <script src="/main-bundled.js"></script>
  </body>
</html>
