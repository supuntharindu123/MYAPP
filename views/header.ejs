<% if (user) { %>

<div class="w-100 bg-secondary d-flex align-items-center">
  <h1 class="myApp fs-3 fw-bolder text-white p-2 ms-3">
    <a href="/" class="text-decoration-none text-white">MyApp</a>
  </h1>

  <div class="ml-auto d-flex align-items-center">
    <i
      class="searchicon fa fa-search text-white mx-3 p-2"
      aria-hidden="true"
    ></i>
    <i
      class="chaticon fa fa-comment-o text-white mx-3 p-2"
      aria-hidden="true"
    ></i>

    <a href="/profile/<%= user.username %>" class="d-flex align-items-center">
      <img
        src="<%= user.avatar %>"
        width="40"
        height="40"
        class="rounded-circle mx-3"
        alt="<%= user.username %>'s avatar"
      />
    </a>

    <a
      href="/create-post"
      class="btn btn-success mx-2 px-3 py-2 d-none d-md-block"
    >
      Create Post
    </a>

    <form action="/logout" method="POST" class="m-0">
      <button class="btn btn-danger mx-2 px-3 py-2">Sign Out</button>
    </form>
  </div>
</div>
<% } else { %>

<div
  class="w-100 bg-secondary d-flex align-items-center justify-content-between"
>
  <h1 class="myApp fs-3 fw-bolder text-white p-2 ms-3">MyApp</h1>

  <div class="p-3">
    <form
      action="/login"
      method="POST"
      class="d-flex flex-wrap align-items-center justify-content-end"
    >
      <label for="username" class="sr-only">Username</label>
      <input
        type="text"
        name="username"
        id="username"
        class="form-control mx-2 mb-2 mb-md-0"
        placeholder="Enter Username"
        style="width: 150px"
        aria-label="Enter Username"
      />

      <label for="password" class="sr-only">Password</label>
      <input
        type="password"
        name="password"
        id="password"
        class="form-control mx-2 mb-2 mb-md-0"
        placeholder="Enter Password"
        style="width: 150px"
        aria-label="Enter Password"
      />

      <button class="btn btn-primary px-3 py-2">Sign In</button>
    </form>
  </div>
</div>
<% } %>
